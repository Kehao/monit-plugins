result = Hash.new()
array.each{|m| 
    m.each{|k,v| 
        result[k] ||= Hash.new() 
        result[k]["max"] || = v 
        result[k]["min"] || = v 
        result[k]["sum"] || = 0
        result[k]["total"] || = 1
        
        result[k]["max"] = v if v > result[k]["max"]
        result[k]["min"] = v if v < result[k]["min"]
        result[k]["sum"] += v
        result[k]["total"] +=1
    }
}

result.each{|k, v| 
    result[k]["avg"] = v["sum"]/v["total"]
}

