#!/usr/bin/env lua

-- check_disk_df

dofile("plugin.lua")

function check() 
  local output = os.cmd("top -b -n 1")
  local names = {"user","system","nice","idle","iowait"} 
  local values = {string.match(output, "%s+([0-9]+.[0-9]+)%%us,%s+([0-9]+.[0-9]+)%%sy,%s+([0-9]+.[0-9]+)%%ni,%s+([0-9]+.[0-9]+)%%id,%s+([0-9]+.[0-9]+)%%wa")}
  if #values ~= 5 then
    print "UNKNOWN - unknown command output\r\n"
    return
  end
  metrics = table.zip(names, values)
  usage = 100 - tonumber(metrics["idle"])
  print(string.format("OK - usage = %.2f%%\r\n", usage))
  for k,v in pairs(metrics) do
    print(string.format("metric: %s=%s%%", k, v))
  end
end

function usage()
  print("Usage: check_cpu_top")
end

ok, err = pcall(check)
if not ok then
  print("UNKNOWN - plugin internal error\r\n")
  print(err)
end
